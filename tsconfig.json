{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2021", "dom", "dom.iterable"],
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "compileOnSave": true,
  "include": ["src/"]
}